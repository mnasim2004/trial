<style>
  .container { max-width: 600px; margin: 0 auto; padding: 20px; } .booking-form
  { background-color: #f9f9f9; padding: 20px; border-radius: 5px; } .form-group
  { margin-bottom: 20px; } label { display: block; font-weight: bold; }
  input[type="date"], select { width: 100%; padding: 10px; border: 1px solid
  #ccc; border-radius: 5px; } button[type="submit"] { display: block; width:
  100%; padding: 10px; background-color: #007bff; color: #fff; border: none;
  border-radius: 5px; cursor: pointer; } button[type="submit"]:hover {
  background-color: #0056b3; }
</style>

<div class="container">
  <h1>Book a Trial</h1>
  <form action="/product/book" method="POST" class="booking-form">
    <input type="hidden" name="productUserId" value="{{puserId}}" />
    <input type="hidden" name="productId" value="{{pId}}" />
    <input type="hidden" name="brand" value="{{brand}}" />
    <input type="hidden" name="title" value="{{title}}" />
    <input type="hidden" name="description" value="{{description}}" />
    <input type="hidden" name="price" value="{{price}}" />
    <input type="hidden" name="location" value="{{location}}" />
    <input type="hidden" name="photoUrl" value="{{photoUrl}}" />
    <div class="form-group">
      <label for="date">Date:</label>
      <input type="date" id="date" name="date" required />
    </div>
    <div class="form-group">
      <label for="time">Select Time Slot:</label>
      <select id="time" name="time" required>
        <option value="">Select Time Slot</option>
        <option value="9:00 AM - 10:00 AM">9:00 AM - 10:00 AM</option>
        <option value="10:00 AM - 11:00 AM">10:00 AM - 11:00 AM</option>
        <option value="1:00 PM - 2:00 PM">1:00 PM - 2:00 PM</option>
        <option value="2:00 PM - 3:00 PM">2:00 PM - 3:00 PM</option>
        <option value="3:00 PM - 4:00 PM">3:00 PM - 4:00 PM</option>
        <option value="4:00 PM - 5:00 PM">4:00 PM - 5:00 PM</option>
        <option value="5:00 PM - 6:00 PM">5:00 PM - 6:00 PM</option>
        <option value="6:00 PM - 7:00 PM">6:00 PM - 7:00 PM</option>
        <option value="7:00 PM - 8:00 PM">7:00 PM - 8:00 PM</option>
        <option value="8:00 PM - 9:00 PM">8:00 PM - 9:00 PM</option>
      </select>
    </div>
    <button type="submit">Book</button>
  </form>
</div>

<script>
  // Get today's date var today = new Date(); // Calculate the date one month
  from today var nextMonth = new Date(today.getFullYear(), today.getMonth() + 1,
  today.getDate()); // Format the date in YYYY-MM-DD format for the input
  element var formattedDate = nextMonth.toISOString().slice(0, 10); // Set the
  min and max attributes of the date input element
  document.getElementById('date').setAttribute('min',
  today.toISOString().slice(0, 10));
  document.getElementById('date').setAttribute('max', formattedDate);
</script>