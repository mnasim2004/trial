    <style>

.product-image {
    max-width: 200px; /* Adjust the maximum width as needed */
    max-height: 150px; /* Adjust the maximum height as needed */
}

    </style>





<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1>User Details</h1>
                <a href="/users/logout" class="btn btn-danger">Logout</a>
            </div>
            <ul>
                <li><strong>Username:</strong> {{ user.username }}</li>
                <li><strong>Name:</strong> {{ user.name }}</li>
                <li><strong>Email:</strong> {{ user.email }}</li>
                <li><strong>Address:</strong> {{ user.address }}</li>
                <li><strong>Pincode:</strong> {{ user.pincode }}</li>
                <li><strong>Phone Number:</strong> {{ user.phoneNumber }}</li>
            </ul>
            <!-- Add buttons -->
            <div>
                <a href="/product/addp" class="btn btn-primary">Add Product</a>
                <a href="/product/searchp" class="btn btn-primary">Search Product</a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <h2>My Products</h2>
            <ul class="list-group">
                {{#each products}}
                <li class="list-group-item">
                    <div class="product-info">
                        <img src="https://trialmate.s3.amazonaws.com/{{ this.photoUrl }}" alt="Product Image" class="product-image">
                        <h4>{{this.brand}}</h4>
                        <p><strong>Title:</strong> {{this.title}}</p>
                        <p><strong>Description:</strong> {{this.description}}</p>
                        <p><strong>Price:</strong> {{this.price}}</p>
                        <p><strong>Location:</strong> {{this.location}}</p>
                    </div>
                    <div class="product-actions">
                        <a href="/product/editp/{{this._id}}" class="btn btn-primary">Edit</a>
                        <form action="/product/delete/{{this._id}}" method="POST">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>