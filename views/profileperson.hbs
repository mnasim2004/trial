<div class="p-4 bg-gray-900 sm:ml-64">
    <div class="p-4 bg-gray-800 border-gray-200 rounded-lg dark:border-gray-700">
        <div class="flex flex-wrap mb-2">
            <h2 class="text-3xl p-2 font-normal text-white">Profile</h2>
        </div>
        <div class="  mb-4">
            <div class="bg-gray-700 gap-1 p-4 rounded-t-lg flex flex-col items-center ">
                <img class="w-12 h-12 rounded-full shadow-lg"
                    src="https://trialmate.s3.amazonaws.com/{{ user.photoUrl }}" alt="Profile" />
                <div class="text-center ">
                    <h5 class=" text-md font-medium text-white dark:text-white">{{ user.name }}</h5>
                    <span class="text-xs text-gray-200 dark:text-gray-400">{{ user.username }}</span>
                </div>
            </div>
        </div>
        <h2 class="text-3xl p-2 font-normal text-white">Products</h2>
        <div class="grid grid-cols-4 gap-4 mb-4">
            {{#each products}}
            <div class="max-w-sm bg-gray-400 shadow-2xl rounded-md shadow dark:bg-gray-800 dark:border-gray-700">
                <a href="#" data-popover-target="popover-image-{{this.id}}">
                    <img src="https://trialmate.s3.amazonaws.com/{{ this.photoUrl }}" alt="Product Image"
                        class="product-image bg-cover rounded-t-lg">
                    {{!-- <image class="bg-cover h-32 rounded-t-lg"
                        src="https://trialmate.s3.amazonaws.com/{{this.photoUrl}}"> --}}
                </a>
                <div class="p-5">
                    <a href="#">
                        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{this.title}}
                        </h5>
                    </a>
                    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{this.description}}</p>
                </div>
            </div>
            <div data-popover id="popover-image-{{this.id}}" role="tooltip"
                class="absolute p-4 z-10 invisible inline-block text-sm text-gray-500 transition-opacity duration-300 bg-white border border-gray-200 rounded-lg shadow-sm opacity-0 w-96 dark:text-gray-400 dark:bg-gray-800 dark:border-gray-600">
                <h2 class="text-xl font-bold text-gray-900">{{this.title}}</h2>
                <h3 class="text-lg text-gray-700">Brand : {{this.brand}}</h3>
                <p class="text-gray-600">Description: {{this.description}}</p>
                <p class="text-gray-900 font-semibold">Price: ${{this.price}}</p>
                <p class="text-gray-500">Location: {{this.location}}</p>
            </div>
            {{/each}}
        </div>
        <div class=" p-4 bg-white rounded-lg grid grid-cols-1 mb-2">
            <form action="/users/comment" method="POST" class="">
                <jsuites-rating value="0" tooltip="Ugly, Bad, Average, Good, Outstanding"></jsuites-rating>
                <label for="message" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Your
                    message</label>
                <textarea id="message" rows="4" name="message"
                    class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="Leave a comment..."></textarea>
                <input type="hidden" id="ratingValue" name="rating" value="">
                <input type="hidden" id="userId" name="userId" value="{{user._id}}">
                <button type="submit"
                    class="mt-2 btn btn-primary text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Post</button>
            </form>
        </div>
        <div class=" p-4 bg-gray-200 rounded-lg grid grid-cols-1 ">
            {{#each ratings}}
            <div class=" p-4 bg-white rounded-lg grid grid-cols-1 mb-2">
                <figure class="">
                    <div class="rating-container" data-rating="{{this.rating}}"></div>
                    <blockquote>
                        <p class="text-2xl font-semibold text-gray-900 dark:text-white">{{this.review}}</p>
                    </blockquote>
                    <figcaption class="flex items-center mt-6 space-x-3 rtl:space-x-reverse">
                        <img class="w-6 h-6 rounded-full"
                            src="https://trialmate.s3.amazonaws.com/{{this.wuser.photoUrl}}" alt="profile picture">
                        <div
                            class="flex items-center divide-x-2 rtl:divide-x-reverse divide-gray-300 dark:divide-gray-700">
                            <cite class="pe-3 font-medium text-gray-900 dark:text-white">{{this.wuser.username}}</cite>
                            <cite class="ps-3 text-sm text-gray-500 dark:text-gray-400">{{this.position}}</cite>
                        </div>
                    </figcaption>
                </figure>
            </div>
            {{/each}}
        </div>
    </div>
</div>

