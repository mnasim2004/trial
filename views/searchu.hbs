        <ul class="space-y-2 font-medium">
            <li>
                <a href="/users" class="text-center flex items-center ps-2.5 mb-5">
                    <span class="self-center text-xl font-semibold whitespace-nowrap text-white">Trial Mate</span>
                </a>
            </li>
            <li>
                {{#if session.loggedIn}}
                <div class="bg-gray-800  gap-1 p-4 rounded-t-lg flex flex-col items-center ">
                    <img class=" w-12 h-12 rounded-full shadow-lg"
                        src="https://trialmate.s3.amazonaws.com/{{ user_data.photoUrl }}" alt="Profile" />
                    <div class=" text-center">
                        <h5 class=" text-md font-medium text-white dark:text-white">{{ user_data.name }}</h5>
