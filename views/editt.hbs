<style>
  .container { max-width: 600px; margin: 0 auto; padding: 20px; } .booking-form
  { background-color: #f9f9f9; padding: 20px; border-radius: 5px; } .form-group
  { margin-bottom: 20px; } label { display: block; font-weight: bold; }
  input[type="date"], select { width: 100%; padding: 10px; border: 1px solid
  #ccc; border-radius: 5px; } button[type="submit"] { display: block; width:
  100%; padding: 10px; background-color: #007bff; color: #fff; border: none;
  border-radius: 5px; cursor: pointer; } button[type="submit"]:hover {
  background-color: #0056b3; }
</style>

<div class="container">
  <h1>Edit Trial</h1>
  <form
    action="/product/updatet/{{trial._id}}"
    method="POST"
    class="booking-form"
  >
    <!-- Hidden input fields to store trial IDs and other information -->
    <input type="hidden" name="trialId" value="{{trial._id}}" />
    <input type="hidden" name="productId" value="{{trial.productId}}" />
    <input type="hidden" name="productUserId" value="{{trial.productUserId}}" />
    <input type="hidden" name="brand" value="{{trial.brand}}" />
    <input type="hidden" name="title" value="{{trial.title}}" />
    <input type="hidden" name="description" value="{{trial.description}}" />
    <input type="hidden" name="price" value="{{trial.price}}" />
    <input type="hidden" name="location" value="{{trial.location}}" />
    <input type="hidden" name="photoUrl" value="{{trial.photoUrl}}" />

    <div class="form-group">
      <label for="date">Date:</label>
      <input
        type="date"
        id="date"
        name="date"
        value="{{trial.date}}"
        required
      />
    </div>
    <div class="form-group">
      <label for="timeSlot">Select Time Slot:</label>
      <select id="timeSlot" name="timeSlot" required>
        <option value="">Select Time Slot</option>
        <option value="9:00 AM - 10:00 AM">9:00 AM - 10:00 AM</option>
        <option value="10:00 AM - 11:00 AM">10:00 AM - 11:00 AM</option>
        <option value="1:00 PM - 2:00 PM">1:00 PM - 2:00 PM</option>
        <option value="2:00 PM - 3:00 PM">2:00 PM - 3:00 PM</option>
        <option value="3:00 PM - 4:00 PM">3:00 PM - 4:00 PM</option>
        <option value="4:00 PM - 5:00 PM">4:00 PM - 5:00 PM</option>
        <option value="5:00 PM - 6:00 PM">5:00 PM - 6:00 PM</option>
        <option value="6:00 PM - 7:00 PM">6:00 PM - 7:00 PM</option>
        <option value="7:00 PM - 8:00 PM">7:00 PM - 8:00 PM</option>
        <option value="8:00 PM - 9:00 PM">8:00 PM - 9:00 PM</option>
      </select>
    </div>
    <button type="submit">Update</button>
  </form>
</div>