<div style="background-image: url('https://trialmate.s3.amazonaws.com/images/unsplash_jxCGoUiBAiA.png');"
  class="bg-center bg-cover bg-no-repeat min-h-screen bg-gray-100 p-8 sm:p-12 bg-gray-200 bg-blend-multiply">
  <div class="mx-auto max-w-md px-6 py-6 bg-gray-50 border-0 shadow-lg sm:rounded-2xl">
    <h1 class="text-2xl font-bold mb-4">Sign Up</h1>
    <form action="/profile" method="post" id="form" enctype="multipart/form-data">
      <div class="relative z-0 w-full mb-5">
        <input type="text" name="username" id="first_name" placeholder="User Name" required=""
