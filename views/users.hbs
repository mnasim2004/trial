<script> 
function checkPasswordCriteria(password) {
  // Regular expressions to match criteria
  const hasCapitalLetter = /[A-Z]/.test(password);
  const hasSpecialCharacter = /[!@#$%^&*()-_=+{};:,<.>?`~]/.test(password);
  const hasNumber = /[0-9]/.test(password);

  // Check if all criteria are met
  return hasCapitalLetter && hasSpecialCharacter && hasNumber;
}

function validatePassword(input) {
  const error = document.getElementById('password-error');
  const criteriaError = document.getElementById('password-criteria-error');
  
  // Basic HTML5 validation check
  if (input.validity.valid) {
    error.classList.add('hidden');
  } else {
    error.classList.remove('hidden');
  }

  // Custom password criteria check
  if (checkPasswordCriteria(input.value)) {
    criteriaError.classList.add('hidden');
  } else {
    criteriaError.classList.remove('hidden');
  }
}
</script>